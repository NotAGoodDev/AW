<!DOCTYPE html>
<html lang="es">
<head>
    <title>404 grupo 26</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <link href="https://www.dafont.com/es/forum/read/249632/my-hero-academia-font?family=Roboto" rel="stylesheet">
</head>
<body>
    <div class="header">
        <div class="header-buttons">
            <a href="/preguntas" class="button-long green text-white">Preguntas</a>
            <a href="/preguntas/sinResponder" class="button-long green text-white">Sin responder</a>
            <a href="/usuarios" class="button-long green text-white">Usuarios</a>
        </div>

        <a href="/index"><img src="/img/logo.png" alt="" class="header-logo"></a>

        <div class="header-user">
            <img src="<%= usuario.imagen %>" alt="">
            <p class="titule-page text-white"> <%= usuario.nombre %> </p>
            <a href="/loginout/login" class="button red text-white">Cerrar sesión</a>
        </div>
    </div>

    <div class="container">
        <div >
            <form class="search-container" action="/preguntas/buscar" method="GET">
                <input type="submit" class="button-special green text-white small" value="Buscar"/>
                <input type="text" name="busqueda" class="search" placeholder="Buscar por título/cuerpo de la pregunta">
            </form>
        </div>

        <div class="profile-container spaced">
            <div class="filter-user">
                <img src="<%= usuarioPerfil.imagen %>" alt="" class="spaced-form img-user">
                <p class="normal"><%= usuarioPerfil.nombre %></p>
                <p class="verysmall">Miembro desde:
                    <%= usuarioPerfil.fecha_alta %>
                </p>
            </div>

            <div class="statistics-container">
                <div class="profile-bar green">
                    <p class="normal text-white">Estadísticas</p>
                </div>

                <div class="reputation-container spaced">
                    <div id="reputation-number">
                        <p class="small">Reputación</p>
                        <p class="normal"><%= usuarioPerfil.reputacion %></p>
                    </div>
                    <div id="reputation-questions">
                        <p class="small">Preguntas</p>
                        <p class="normal"><%= usuarioPerfil.n_preguntas %></p>
                    </div>
                    <div id="reputation-answers">
                        <p class="small">Respuestas</p>
                        <p class="normal"><%= usuarioPerfil.n_respuestas %></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="medals-container spaced">
            <div class="profile-bar green">
                <p class="normal text-white">Medallas</p>
            </div>
            

            <div class="medal-types-container spaced">

                <div class="medal-container">
                    <div class="medal-type bronze">
                        <p class="small">BRONCE</p>
                        <p class="big"><%= medallasBronce.reduce((ac, medalla) => ac += medalla.contador, 0); %></p>
                    </div>

                    <% medallasBronce.map(medalla => { %>
                        <div class="medal-tag">
                            <p class="medal-in-medaltag bronze"></p>
                            <p class="text-in-medaltag verysmall"> <%= medalla.descripcion %> </p>

                            <% if(medalla.contador != 1) { %>
                            <p class="times-in-medaltag"> x<%= medalla.contador %></p>
                            <% } %>


                        </div>

                    <% }) %>
                </div>


                <div class="medal-container">
                    <div class="medal-type silver">
                        <p class="small">PLATA</p>
                        <p class="big"><%= medallasPlata.reduce((ac, medalla) => ac += medalla.contador, 0); %></p>
                    </div>

                    <% medallasPlata.map(medalla => { %>
                        <div class="medal-tag">
                            <p class="medal-in-medaltag silver"></p>
                            <p class="text-in-medaltag verysmall"> <%= medalla.descripcion %> </p>

                            <% if(medalla.contador != 1) { %>
                            <p class="times-in-medaltag"> x<%= medalla.contador %></p>
                            <% } %>


                        </div>

                    <% }) %>

                </div>

                <div class="medal-container">
                    <div class="medal-type gold">
                        <p class="small">ORO</p>
                        <p class="big"><%= medallasOro.reduce((ac, medalla) => ac += medalla.contador, 0); %></p>
                    </div>
                    
                    <% medallasOro.map(medalla => { %>
                        <div class="medal-tag">
                            <p class="medal-in-medaltag gold"></p>
                            <p class="text-in-medaltag verysmall"> <%= medalla.descripcion %> </p>

                            <% if(medalla.contador != 1) { %>
                            <p class="times-in-medaltag"> x<%= medalla.contador %></p>
                            <% } %>


                        </div>

                    <% }) %>
                </div>
